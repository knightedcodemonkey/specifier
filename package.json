{
  "name": "@knighted/specifier",
  "version": "1.0.0-rc.2",
  "description": "Node.js tool for updating your ESM and CJS specifiers.",
  "type": "module",
  "main": "dist",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.cts",
  "engines": {
    "node": ">=12.20.0"
  },
  "scripts": {
    "prettier": "prettier -w src/*.{js,ts} test/*.js",
    "lint": "eslint src/*.js test/*.js",
    "test": "c8 --reporter=text --reporter=text-summary --reporter=lcov node --test --test-reporter=spec test/*.js",
    "build": "babel-dual-package src --copy-files --no-cjs-dir",
    "prepack": "npm run build"
  },
  "keywords": [
    "specifier",
    "esm",
    "cjs",
    "import",
    "export",
    "dynamic import",
    "require",
    "javascript",
    "typescript",
    "jsx",
    "update",
    "edit",
    "change",
    "map"
  ],
  "files": [
    "dist"
  ],
  "author": "KCM <knightedcodemonkey@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/knightedcodemonkey/specifier.git"
  },
  "bugs": {
    "url": "https://github.com/knightedcodemonkey/specifier/issues"
  },
  "dependencies": {
    "@babel/parser": "^7.22.7",
    "@babel/traverse": "^7.22.8",
    "magic-string": "^0.30.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.9",
    "@knighted/dump": "^1.0.2",
    "babel-dual-package": "^1.0.0",
    "c8": "^8.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-n": "^16.0.1",
    "prettier": "^3.0.1"
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 90,
    "semi": false,
    "singleQuote": true
  }
}

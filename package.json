{
  "name": "@knighted/specifier",
  "version": "1.0.0-alpha.6",
  "description": "Node.js tool for updating your ESM specifiers, and CJS require strings.",
  "type": "module",
  "main": "dist",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=12.20.0"
  },
  "scripts": {
    "prettier": "prettier -w src/*.js test/*.js",
    "lint": "eslint src/*.js test/*.js",
    "test": "c8 --reporter=text --reporter=text-summary --reporter=lcov node --test --test-reporter=spec test/*.js",
    "build": "babel-dual-package src",
    "prepack": "npm run build"
  },
  "keywords": [
    "specifier",
    "esm",
    "import",
    "export",
    "dynamic import",
    "require",
    "update",
    "mapper"
  ],
  "files": [
    "dist"
  ],
  "author": "KCM <knightedcodemonkey@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/knightedcodemonkey/specifier.git"
  },
  "bugs": {
    "url": "https://github.com/knightedcodemonkey/specifier/issues"
  },
  "dependencies": {
    "@babel/parser": "^7.22.7",
    "@babel/traverse": "^7.22.8",
    "magic-string": "^0.30.1"
  },
  "devDependencies": {
    "@knighted/dump": "^1.0.2",
    "babel-dual-package": "^1.0.0-rc.3",
    "c8": "^8.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-n": "^16.0.1",
    "prettier": "^3.0.0"
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 90,
    "semi": false,
    "singleQuote": true
  }
}

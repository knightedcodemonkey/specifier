{
  "name": "@knighted/specifier",
  "version": "1.0.0",
  "description": "Node.js tool for updating your ESM and CJS specifiers.",
  "type": "module",
  "main": "dist",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.cts",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "prettier": "prettier -w src/*.ts test/*.ts",
    "lint": "eslint src/*.ts test/*.ts",
    "test": "c8 --reporter=text --reporter=text-summary --reporter=lcov node --no-warnings --loader tsx --test --test-reporter=spec test/*.ts",
    "build:types": "tsc --emitDeclarationOnly",
    "build:dual": "babel-dual-package src --copy-files --no-cjs-dir --extensions .ts",
    "prebuild": "rm -rf ./dist",
    "build": "npm run build:types && npm run build:dual",
    "prepack": "npm run build"
  },
  "keywords": [
    "specifier",
    "esm",
    "cjs",
    "import",
    "export",
    "dynamic import",
    "require",
    "javascript",
    "typescript",
    "jsx",
    "update",
    "edit",
    "change",
    "map"
  ],
  "files": [
    "dist"
  ],
  "author": "KCM <knightedcodemonkey@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/knightedcodemonkey/specifier.git"
  },
  "bugs": {
    "url": "https://github.com/knightedcodemonkey/specifier/issues"
  },
  "dependencies": {
    "@babel/parser": "^7.22.7",
    "@babel/traverse": "^7.22.8",
    "magic-string": "^0.30.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@babel/types": "^7.22.10",
    "@knighted/dump": "^1.0.2",
    "@types/babel__traverse": "^7.20.1",
    "@types/node": "^20.4.8",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "babel-dual-package": "^1.1.1",
    "c8": "^8.0.0",
    "eslint": "^8.45.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^16.0.1",
    "prettier": "^3.0.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 90,
    "semi": false,
    "singleQuote": true
  }
}
